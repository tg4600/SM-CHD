ROUTINE validation_routine

    JOIN LIBRARY $LIB_UTILS
    DECLARE return_value

    IF STRIP(SELECT pds_config.c_axis_name) = " " THEN
        flash_message ( GET_USER_MESSAGE ("PDS_CONFIG_REQD_C_AXIS",1) , TRUE )
        return_value = FALSE
    ELSEIF STRIP ( SELECT pds_config . time_axis_name ) = " " THEN
        flash_message ( GET_USER_MESSAGE ("PDS_CONFIG_REQD_TIME_AXIS",1) , TRUE )
        return_value = FALSE
    ELSEIF STRIP ( SELECT pds_config . layer_axis_name ) = " " THEN
        flash_message ( GET_USER_MESSAGE ("PDS_CONFIG_REQD_LAYER_AXIS",1) , TRUE )
        return_value = FALSE
    ELSE
        return_value = TRUE
    ENDIF

    RETURN ( return_value )

ENDROUTINE
