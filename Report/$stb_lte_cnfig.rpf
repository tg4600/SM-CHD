ROUTINE do_the_work  ( VALUE operation )

table_setup ()
smp_lte_perform_option  ( name_of_table              ,
                          displayed_name_of_table    ,
                          prompt_details             ,
                          labtable_messages          ,
                          default_value              ,
                          input_mess                 ,
                          header_mess                ,
                          footer_mess                ,
                          display_footer_mess        ,
                          directory                  ,
                          extn                       ,
                          help_context               ,
                          GLOBAL ("CURRENT_LIBRARY") ,
                          fields_to_output           ,
                          special_actions_report     ,
                          operation                  )

ENDROUTINE

