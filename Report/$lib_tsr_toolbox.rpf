ROUTINE lib_tsr_toolbox_result_incident ( self )

DECLARE grid, result_object, Template, TestNum,
        JobID, Product, BatchName, SampleId, ResultID, Analysis, TestCount, ResName, ResText, ResUnits{, Description}

