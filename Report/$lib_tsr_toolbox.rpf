ROUTINE lib_tsr_toolbox_send_incident ( self )

DECLARE grid, result_object, testn, sample, job, standard, NumOfInc, send, dynamic_sql

    send        = TRUE
    grid        = self . user_info
    result_object   = grid . result_array [grid . current_row]

    result_object   = grid . result_array [grid . current_row]

    testn       = SELECT result.test_number IN OBJECT result_object
    sample      = SELECT all_test.sample WHERE test_number = testn
    job         = STRIP(SELECT all_sample.job_name WHERE id_numeric = sample)
    standard    = SELECT all_sample.standard
    NumOfInc    = 0

    CREATE OBJECT "STD_DYNAMIC_SQL" , dynamic_sql
    IF (standard = TRUE) THEN
        dynamic_sql . add_to_sql_statement  ( "SELECT COUNT(incident_id) " )
        dynamic_sql . add_to_sql_statement  ( "FROM all_incidents " )
        dynamic_sql . add_to_sql_statement  ( "WHERE sample  = '":sample:"'" )
        dynamic_sql . add_select_integer ()
    ELSE
        dynamic_sql . add_to_sql_statement  ( "SELECT COUNT(incident_id) " )
        dynamic_sql . add_to_sql_statement  ( "FROM all_incidents " )
        dynamic_sql . add_to_sql_statement  ( "WHERE job_name  = '":job:"'" )
        dynamic_sql . add_select_integer ()
    ENDIF

    dynamic_sql . execute ( )

    NumOfInc  = dynamic_sql . select ( 1 )
    {fm("NumOfInc = ":NumOfInc)}

    {fm("GLOBAL ( 'COMMIT_VIEW_MODE' ) = ":GLOBAL ( "COMMIT_VIEW_MODE" ):ASCII(10):ASCII(10):
        "NumOfJobs:" = SELECT COUNT all_incidents WHERE JOB_NAME = '":job:"'")}

    IF (standard) AND (NumOfInc = 0) THEN
        fm("No incidents on this standard")
    ELSEIF NumOfInc = 0 THEN
        fm("No incidents on job " : STRIP(job))
    ELSE
        CALL_ROUTINE "ShowIncidentsForJob" USING job, sample, send
                IN LIBRARY "incident_send"
    ENDIF

ENDROUTINE
